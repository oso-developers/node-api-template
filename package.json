{
  "name": "node-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"dotenv -e .env -- node build/index.js\"",
    "build": "npx tsc",
    "start:local": "dotenv -e .env -- node build/index.js",
    "start:prod": "npx pm2 start --no-daemon",
    "gen:secret": "node ./src/core/scripts/generateSecret.mjs",
    "gen:types": "npx prisma generate",
    "test": "dotenv -e .env -- npx vitest --threads false",
    "lint": "npx eslint ./src/ --ext .ts",
    "fmt": "npx prettier --write ./src/",
    "check": "npm run lint && npm run fmt",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "createApi" : "node ./src/app/modules/createAPI.ts"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-console": "error",
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "prisma": {
    "seed": "node src/app/seeders.mjs"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/marked": "^5.0.1",
    "@types/node": "^20.4.4",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.35.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.2",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/error": "^3.2.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/request-context": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "ajv": "^8.12.0",
    "argon2": "^0.30.3",
    "axios": "^1.3.4",
    "dotenv-cli": "^7.0.0",
    "fastify": "^4.14.1",
    "json-schema-to-ts": "^2.7.2",
    "marked": "^5.1.1",
    "module-alias": "^2.2.2",
    "njwt": "^2.0.0",
    "node-fetch": "^3.3.1",
    "owasp-password-strength-test": "^1.3.0",
    "pino": "^8.11.0",
    "pm2": "^5.3.0",
    "uuid": "^9.0.0"
  }
}

